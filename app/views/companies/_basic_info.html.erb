<dl>
	<%= fields_for :company, company do | fm | %>
	<dt class="f_label">
		<%= fm.label :name, "公司名称:"  %>
	</dt>
	<dd class="f_input">
		<%= fm.text_field :name  %>
	</dd>

	<dt class="f_label">
		<%= fm.label :legal_person, "法人代表:"  %>
	</dt>
	<dd class="f_input">
		<%= fm.text_field :legal_person  %>
	</dd>

	<dt class="f_label">
		<%= fm.label :register_address, "公司注册地址:"   %>
	</dt>
	<dd class="f_input">
		<%= fm.text_field :register_address  %>
	</dd>

	<dt class="f_label">
		<%= fm.label :license_image, "营业执照电子副本:" %>
	</dt>
	<dd class="f_input">
		<%= fm.text_field :license_image   %>
	</dd>


	<dt class="f_label" ></dt>
	<dd class="f_input">
		<%= fm.submit "验证", :class => "button orange verify-button", :id => "btn_verify_company", :remote => true %>
	</dd>

	<% end %>
</dl>
