// scroll to show mini filter bar
$(window).scroll(function(){
	var scroll = $(this).scrollTop();
	var filterBarHeight = 226;
	if(scroll > filterBarHeight){
		$(".home_filter_bar_area").addClass("fixed");
	} else {
		$(".home_filter_bar_area").removeClass("fixed");
	}
});



var $filter_form = $('#search_filter_form');
if($filter_form.length > 0){
	var fnSubmitFilters = function(){
		$filter_form.submit();
	}
	
	$('#search_location_id').change( fnSubmitFilters );
	$('#search_category_id').change( fnSubmitFilters );
	$('#search_status').change( fnSubmitFilters );
	$('#search_sort_by').change( fnSubmitFilters );
}


 