$("#communication_dialog").html("<%= escape_javascript render(:partial => 'orders/comm_dialog_show')%>");

$("#communication_dialog").overlay({
		top : 100,
		mask : {
			color : '#333',
			loadSpeed : 200,
			opacity : 0.6
		},
		closeOnClick : true,
		load : false
	});

$("#communication_dialog").overlay().load();

$('.logon_close_btn').click(function(){
	$("#communication_dialog").overlay().close();
});