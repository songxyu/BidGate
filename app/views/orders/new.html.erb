<h1>Fill your order</h1>

<%= form_for @order do |f| %>
<div style="padding-left: 50px;">
	<!-- category selection area -->
	<span><b>订单类型：</b></span>
	<br>
	<div style="padding-left: 50px;">
		<% @category.each do |cate| %>
		<% if cate.is_parent %>
		<div style='padding-left: 50px;'>
			<%= radio_button_tag :parent_category, cate.id %><%= label_tag cate.name %>
			<br />

		</div>
		<% end %>
		<% end %>
	</div>
	<hr />

	<span><b>物品种类：</b></span>
	<br>
	<div style="padding-left: 50px;">
		<% @category.each do |cate| %>
		<% if !cate.is_parent %>
		<div style='padding-left: 50px;'>
			<%= radio_button_tag :category, cate.id %><%= label_tag cate.name %>
			<br />

		</div>
		<% end %>
		<% end %>
	</div>
	<hr />

	<!-- order goods data fill area -->
	<p><b> 货物信息:  	</b></p>
	<%= fields_for :order_goods,  @order.order_goods.new do | goods_form | %>
		<span><b>名称：</b></span>
		<%= goods_form.text_field :name  %>
		<br>
		
		<span><b>型号：</b></span>
		<%= goods_form.text_field :model  %>
		<br>
		
		<span><b>价格：</b></span>
		<%= goods_form.text_field :price %>
		<br>
	
		<span><b>数量：</b></span>
		<%= goods_form.text_field :quantity  %>
		<br>

	<% end %>

	<hr />

	<span><b>竞拍总价格：</b></span>
	<%= f.text_field (:price) %>
	<br>

	<!-- order basic data fill area -->
	<span><b><font color='#68217A'>一口价：</font></b></span>
	<%= f.select(:price_type, [["正常竞价", 1], ["一口价", 0]]) %>
	<br>

	<span><b>截止日期：</b></span>
	<%= select_datetime Date.today, :prefix => :deadline %>
	<br>
	<hr>

	<%= button_to  '提交' %>
</div>

<% end %>
