<div class="communication-dialog">
	<!-- close button -->
	<img src="../img/close_btn.png" class="logon_close_btn">
	<!-- content -->
	<div class="left_view">
		<div class="header_master">
			<div class="orderHeader">订单号：<%= @order.buyer_id %></div>
			<div class="lastBidPrice">最新竞价：5万元</div>
			<div class="itemTableTitle">采购物料：</div>
			<table class="itemTable">
						<tbody>
							<tr class="title">
								<th>物料名称</th>
								<th>型号</th>
								<th>规格</th>
								<th>长/宽/高(mm)</th>
								<th>数量(吨)</th>
							</tr>
							<tr>
								<td>不锈钢</td>
								<td>301</td>
								<td>方管</td>
								<td>D*200*5600</td>
								<td>0.8</td>
							</tr>
							<tr class="alt">
								<td>不锈钢</td>
								<td>412</td>
								<td>方管</td>
								<td>D*300*5600</td>
								<td>1.5</td>
							</tr>
							<tr>
								<td>螺纹钢</td>
								<td>D3</td>
								<td>螺纹钢</td>
								<td>D*150*8000</td>
								<td>2.0</td>
							</tr>
						</tbody>
					</table>
		</div>
		<div class="middle_stat">
			statistics: bid time counter(progress bar, D3), last communication info
		</div>
	</div>

	<div class="right_view">
		<%= link_to @order, :class=>"full_details_btn", remote: true do %>
				<span>查看详情</span>
			<% end %>
			
		<div class="quickBidField"><input name="quickBidPrice" placeholder="我的竞价"/>  万元</div>

		<%= link_to @order, :class=>"quick_bid_btn", remote: true do %>
				<span>快速竞拍!</span>
			<% end %>
		<div class="buyerInfo">采购商信息：<%= @order.buyer_id %></div>
	</div>
</div>
