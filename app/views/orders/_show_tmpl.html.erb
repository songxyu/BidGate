 

<div class="orderDetailPage">

	<div class="leftWrapper">
		<!-- header info -->
		<article class="orderSummaryContainer">
			<div class="orderSummary">
				<div class="sumHeader">
					<div class="order-must-title">
						采购：<span>{{ goodSumStr}}</span>
					</div>
					<div class="order-id">
						订单编号: XXXXXXXXX
					</div>
				</div>

				<div class="sumContent">
					<div class="order-img">
						<img src= "../img/sample_item_img.jpg" />
					</div>
					<div class="order-sum-area">
						<div class="order-sum-keywords">
							<ul>

								<li>
									<p class="title">
										交货城市
									</p>
									<span class="value">{{ location }}</span>
								</li>
								
								<li>
									<p class="title">
										交货周期
									</p>
									<span class="count"> XX3周XX</span>
								</li>

								<li>
									<p class="title">
										竞拍进度
									</p>
									<div class="order-timecounter">
										<div class="progress">
											<div class="progress-bar" role="progressbar"  aria-valuemin="0" aria-valuemax="100"
												 style="width: 0%;"></div>
										</div>
									</div>
									<div>
										<span class="deadline">截止日期：
											<br/>
											{{ deadline }}</span>
									</div>
								</li>

								

							</ul>
						</div>
						<div class="order-sum-other-info">
							<div class="sum-info">
								<div class="purchaser-company-name">
									采购商：{{ buyerCompanyName }}
								</div>
								<div class="split-line"></div>
								<div class="other">
									other
								</div>
							</div>
						</div>
					</div>

				</div>

			</div>
		</article>

		<!-- content info -->
		<article class="orderContainer">
			<div class="orderInfoContainer">
				<div class="orderInfo">
					<div class="info-header"><h4>采购明细</h4></div>
					<div class="detail-download-button">
						<i class="glyphicon  glyphicon-download-alt span-icon"></i>
						<span>下载采购单明细</span>
					</div>
					<hr class="dashed">
					<!-- item table TODO hardcode -->
					<table class="itemTable">
						<tbody>

							<tr class="title">
								{{#itemPropList}}
								<th>{{.}}</th>
								{{/itemPropList}}
							</tr>

						
							{{#items}}
							<tr>
								{{#itemPropValues}}
									<td>{{ . }}</td>
							    {{/itemPropValues}}
							</tr>
							{{ /items }}
						 
						</tbody>
					</table>

					<!-- description detail list -->
					<div class= "descrDetail">
						<div class="descrDetailTitle">
							关键信息
						</div>
						<table class="descrDetailInfo">
							<tbody>
								<tr>
									<td>采购商：</td>
									<td class="value">{{ buyerCompanyName }}</td>
								</tr>
								<tr>
									<td>收货地址：</td>
									<td class="value">{{ location }}</td>
								</tr>
								<tr>
									<td>X收货日期：</td>
									<td class="value">2014年3月15日</td>
								</tr>
								<!-- <tr>
									<td>竞拍截止时间：</td>
									<td class="value">2014年2月20日</td>
								</tr> -->
								<tr>
									<td>付款方式：</td>
									<td class="value">{{ payment_method }}</td>
								</tr>
								<tr>
									<td>X物流运输费用：</td>
									<td class="value">供应商承担</td>
								</tr>
								<tr>
									<td>X是否区域采购：</td>
									<td class="value">是</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="vendorDemands">
						<div class="vendorDemandsTitle">
							采购商要求
						</div>
						<div class="vendorDemandsInfo">
							<div>{{ memo }}</div>
						</div>
					</div>
				</div>

				<!-- buyer company details info -->
				<div class="buyerDetailsInfo">
					<h3>采购商公司信息</h3>
					<hr class="dashed">
					<div>
						XXXXX
					</div>
				</div>

			</div>
		</article>

	</div>

	<div class="rightWrapper">
		<!-- order bid functions area -->
		<div class="wall" id="bidActionArea">
			<div class="lastBidPrice">
				<div class="title">
					最新竞拍金额（元）
				</div>
				<div class="price">
					<span>¥ </span> </span>
				</div>
			</div>
			<div class="bidStatusTag">
				竞拍中<span class="triangle"></span>
			</div>
			<div class="bidCount">
				XX 个竞拍
			</div>

			<div class="lastBidVendor">
				竞价方：<span class="companyInfo"> XXX </span>
			</div>
           
			<a href="#" class="btn btn-primary bidBtn" >
				<span class="bidBtnText">竞价</span>
			</a>
		</div>

		<div class="wall" id="communicationArea">
			<div class="avatarInfoContainer">
				<!-- TODO link to user info page -->
				<div class="avatarTitle">
					<p>
						{{ buyerContact }}
					</p>
					<p class="role">
						{{ buyerJobTitle }}（采购经理）
					</p>
				</div>
				<div class="avatarImg"></div>
				<p class="registerTime">
					注册时间: {{ buyerSignupTime }}
				</p>
				 
				<a href="#" class="comm-dialog-show" >
					<span>发送私信</span>
				</a>
			</div>

		</div>

		<div class="wall" id="avatar-verification-area">
			XXX Personal & Company Verification Info
		</div>

	</div>

</div>
