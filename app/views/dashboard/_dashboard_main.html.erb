
<%= render "layouts/breadcrumb" %>

<div class="dashboard-page">
	<div class="dash-header">
		<ul>
		<li class="company-name"><span class="title">公司名称：</span><%= @user.company.name %></li>
		<li class="compnay-id"><span class="title">公司编号：</span><%= @user.company_id %></li>
		<li class="user-email"><span class="title">用户账号：</span><%= @user.email %></li>
		<li class="user-role"><span class="title">角色：</span><%= get_user_role(@user.contact_title)%></li>
		</ul>
	</div>
	<div class="left-list grid_layout_area">

		<div class="ui-side ui-side-withicon" id="sidebar">
			<ul class="ui-side-list nav nav-pills nav-stacked">
				
				<li class="ui-side-item active">
					<%= link_to dashboard_path, :class=>" ", remote: true  do %>
					<i class="glyphicon  glyphicon-home span-icon"></i>
					<span class=" span-text" href="">账户总览</span> 
					<% end %>
				</li>
				
				<li class="ui-side-item ">
					<%= link_to dashboard_purchases_path(:breadcrumb_path_key => 'homepage,dashboard,myPurchase'), :class=>" ", remote: true  do %>
					<i class="glyphicon glyphicon-list span-icon"></i> 
					<span class="span-text">我的采购</span>
					<% end %>
				</li>
				
				<li class="ui-side-item ">
					<%= link_to dashboard_vendings_path, :class=>" ", remote: true  do %>
					<i class="glyphicon glyphicon-list-alt span-icon"></i> 
					<span class="span-text">我的竞价</span>
					<% end %>
				</li>
				
				<li class="ui-side-item">
					<%= link_to dashboard_profile_path, :class=>" ", remote: true  do %>
					<i class="glyphicon  glyphicon-home span-icon"></i>
					<span class=" span-text" href="">个人资料</span> 
					<% end %>
				</li>
				
				
				<li class="ui-side-item ">
					<%= link_to dashboard_msg_path, :class=>" ", remote: true do %>
					<i class="glyphicon  glyphicon-envelope span-icon"></i>
					<span class="span-text">消息</span>
					<% end %>
				</li>
				
				<li class="ui-side-item ">
					<%= link_to dashboard_settings_path, :class=>" ", remote: true do %>
					<i class="glyphicon  glyphicon-cog span-icon"></i>
					<span class="span-text">设置</span>
					<% end %>
				</li>

			</ul>
			 
		</div>

	</div>
	
	<div class="right-area grid_layout_area">
		
		<%= render "dashboard/general_info" %>
		 
	</div>

</div>