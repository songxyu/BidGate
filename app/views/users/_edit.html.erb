<%= render "layouts/flash_msg" %>

<h3>修改账户信息</h3>

<%= form_for @user, :remote => true do |f| %>

<dl>
	<dt class="f_label">
		<%= f.label :nickname, "用户名:" %>
	</dt>
	<dd class="f_input">
		<%= @user.username %> <br>
	</dd>

	<dt class="f_label">
		<%= f.label :nickname, "*昵称:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :nickname, :value => @user.nickname  %>
	</dd>

	<dt class="f_label">
		<%= f.label :email, "*邮箱:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :email, :value => @user.email  %>
	</dd>

	<dt class="f_label">
		<%= f.label :contact, "真实姓名:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :contact, :value => @user.contact  %>
	</dd>

	<dt class="f_label">
		<%= f.label :contact_title, "职责:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :contact_title, :value => @user.contact_title  %>
	</dd>

	<dt class="f_label">
		<%= f.label :contact_cellphone, "手机:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :contact_cellphone, :value => @user.contact_cellphone  %>
	</dd>

	<dt class="f_label">
		<%= f.label :contact_tel, "联系电话:" %>
	</dt>
	<dd class="f_input">
		<%= f.text_field :contact_tel, :value => @user.contact_tel  %>
	</dd>

</dl>

<%= submit_tag "提交", class:"button orange btn_submit" %>

<% end %>

<%= debug @user %>