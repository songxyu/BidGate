<div class="regContainer">
	<div class="regMain">
		<div id="regTimelineBar" class="regTimelineBar">
			<ul>
				<li class="step">
					<img src="../img/reg/step-bg-light.png">
					<span class="step_number light">1</span>
					<div class="hr active"></div>
					<br>
					<span class="light">填写账号信息</span>
				</li>

				<li class="step">
					<img src="../img/reg/step-bg-dark.png">
					<span class="step_number">2</span>
					<div class="hr"></div>
					<br>
					<span>手机信息验证</span>
					
				</li>

				<li class="step">
					<img src="../img/reg/step-bg-dark.png">
					<span class="step_number">3</span>
					<div class="hr last"></div>
					<br>
					<span>注册成功</span>
				</li>

			</ul>
		</div>

		<div class="userBasicInfoContainer">
			<% user_form = nil %>
			<%= form_for @user do |f| %>

			<!-- user basic info area table -->
			<% user_form = f %>
			<ul class="userBasicInfo">
				<li>
					<div class="fieldLabel">
						<%= f.label :username, "称呼"%><span class="asterisk">*</span>
					</div>
					<div class="fieldInput">
						<%= f.text_field :username, :placeholder => "输入您的姓氏" %>
					</div>
				</li>

				<li>
					<div class="fieldLabel">
						<%= f.label :contact_cellphone, "手机号码"%><span class="asterisk">*</span>
					</div>
					<div class="fieldInput">
						<%= f.text_field :contact_cellphone, :placeholder => "输入手机号码" %>
					</div>
				</li>
				<li>
					<div class="fieldLabel">
						<%= f.label :password_digest, "登录密码"%><span class="asterisk">*</span>
					</div>
					<div class="fieldInput">
						<%= f.text_field :password_digest, :placeholder => "输入密码" %>
					</div>
				</li>
				<li>
					<div class="fieldLabel">
						<%= f.label :password_digest, "重复密码"%><span class="asterisk">*</span>
					</div>
					<div class="fieldInput">
						<%= f.text_field :password_digest, :placeholder => "再次输入密码" %>
					</div>
				</li>

				<li>
					<div class="fieldLabel">
						<%= f.label :username, "职位"%><span class="asterisk">*</span>
					</div>
					<div class="fieldRole">
						<div>
							<div id="role_purchaser" class="role_selection">
								<span>采购经理</span><i></i>
							</div>
							<div id="role_vendor" class="role_selection">
								<span>销售经理</span><i></i>
							</div>
						</div>
					</div>
				</li>
				
				<li>
					<div class="agreementArea">
						<span class="agreeSelect">
							<input id='agree' name='agree' type='checkbox'>
						</span>
						<span> 我已阅读并同意</span><a href="" target="_blank">《壹百万网站服务协议》</a>
					</div>
				</li>
				<li>
					<div id="submitBtn" class="button"><span>立即注册</span></div>
				</li>

			</ul>
			<% end %>

			<!-- right register tips -->
			<%= render "reg_right_tips" %>
		</div>

	</div>

</div>

