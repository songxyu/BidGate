<div class="reg_page">
	<div class="reg_top">
		<div class="reg_top_main">
			<div class="pull_left">
				<span class="reg_header_text">欢迎注册</span>
			</div>
			<div class="pull_right">
				<%= link_to "首页",  orders_path, remote: true  %>
				<%= link_to "帮助" %>
				<%= link_to "登录",  login_path %>
			</div>
		</div>
	</div>
	<div class="reg_container">
		<div class="reg_main">
			<div id="reg_timeline_bar" class="reg_timeline_bar">
				<div>
					<ul class="reg_timeline_tabs">
						<li class="step">
							<div class="hr active"></div>
							<img src="../img/reg/register_step_1.png">
							<br>
							<span>账号信息</span>
						</li>

						<li class="step">
							<div class="hr"></div>
							<img src="../img/reg/register_step_2.png">
							<br>
							<span>完善资料</span>
						</li>

						<!-- TODO
						<li class="step">
						<div class="hr"></div>
						<img src="../img/reg/register_step_3.png">
						<br>
						<span>激活账号</span>
						</li>
						-->
						
						<li class="step">
							<div class="hr"></div>
							<img src="../img/reg/register_step_4.png">
							<br>
							<span>注册成功</span>
						</li>

					</ul>
				</div>
			</div>

			<div class="reg_main_body">
				<% user_form = nil %>
				<%= form_for @user do |f| %>

				<% user_form = f %>
				<span class="verify_header_text">您需要填写公司支付宝账户</span>

				<!-- company verify table -->
				<table id="company_verify">
					<tbody>

						<tr>
							<td><img src="../img/reg/portrait.png" class="icons"></td>
							<td class="f_label"><!-- TODO :username -> :paymeans_username --> <%= f.label :username, "支付宝账号"%><span class="asterisk">*</span></td>
							<td class="f_input"> <%= f.text_field :username  %> </td>
						</tr>
						<tr>
							<td colspan = "2" class="f_label"><!-- TODO :nickname -> :company_name --> <%= f.label :nickname, "公司全称"%> <span class="asterisk">*</span></td>
							<td class="f_input"> <%= f.text_field :nickname  %> </td>
						</tr>

						<tr id="verify_btn" class="verify_btn">
							<td colspan="3">
							<button>
								立即验证
							</button></td>
						</tr>

					</tbody>
				</table>

				<!-- user info area table -->
				<table id="user_info_area">
					<tbody>
						<tr class="user_info_area">
							<td><img src="../img/reg/portrait.png" class="icons"></td>
							<td class="f_label"> <%= f.label :username, "请输入邮箱"%><span class="asterisk">*</span></td>
							<td class="f_input"> <%= f.text_field :username  %> </td>
						</tr>
						<tr class="user_info_area">
							<td colspan = "2" class="f_label"><%= f.label :password_digest, "设定密码"%> <span class="asterisk">*</span></td>
							<td class="f_input"> <%= f.text_field :password_digest  %> </td>
						</tr>
						<tr class="user_info_area">
							<td colspan = "2" class="f_label"><%= f.label :password_digest, "确认密码"%> <span class="asterisk">*</span></td>
							<td class="f_input"> <%= f.text_field :password_digest  %> </td>
						</tr>

						<tr class="user_info_area">
							<td><img src="../img/reg/phone.png" class="icons"></td>
							<td class="f_label"> <%= f.label :contact_cellphone, "手机号码"%><span class="asterisk">*</span></td>
							<td class="f_input" disabled="disabled"> <%= f.text_field :contact_cellphone  %> </td>
						</tr>

						<tr id="submit_btn" class="submit_btn">
							<td colspan="3">
							<button>
								同意注册协议并提交
							</button></td>
						</tr>
					</tbody>
				</table>
				<% end %>

				<!-- right register tips -->
				<div class="right_tips_area">
					<div class="seperate_line"></div>
					<div class="tips">
						<p>
							壹百万账户可以创建自己的采购单, 对其他供应商的订单进行竞价!
							<br>
							如果您已拥有壹百万帐户，则可<%= link_to "在此登录",  login_path, class:"cor_yellow" %>
						</p>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>
